---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import logo from '../../src/images/logo.png';
---
<Layout title="Home">
	<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>Taxes & Corporate Accountant Blog</title>
		</head>
	<body class="">
	<nav class="bg-gray-900 text-white">
		<div
			class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
		>
			<a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
				<Image src={logo} class="h-14" alt="FinancePeople Logo" width={55} height={55} />
				<span
					class="self-center text-2xl font-semibold whitespace-nowrap"
				><span class="text-indigo-400">Finance</span>People</span
				>
			</a>
			<button
				data-collapse-toggle="navbar-default"
				type="button"
				class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
				aria-controls="navbar-default"
				aria-expanded="false"
			>
				<span class="sr-only">Open main menu</span>
				<svg
					class="w-5 h-5"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 17 14"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M1 1h15M1 7h15M1 13h15"
					/>
				</svg>
			</button>
			<div class="hidden w-full md:block md:w-auto" id="navbar-default">
				<ul
					class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 text-white rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0"
				>
					<li>
						<a
							href="index.html"
							class="block py-2 px-3 text-white rounded md:p-0 hover:text-indigo-400"
							aria-current="page"
						>Home</a
						>
					</li>
					<li>
						<a
							href="articles.html"
							class="block py-2 px-3 text-white rounded md:p-0 hover:text-indigo-400"
						>All Articles</a
						>
					</li>
					<li>
						<a
							href="about.html"
							class="block py-2 px-3 text-white rounded md:p-0 hover:text-indigo-400"
						>About</a
						>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<section class="container mx-auto max-w-screen-xl mt-10 px-8">
		<!-- Top Grid -->
		<div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
			<div>
				<h1 class="text-5xl font-bold mt-4 mb-8 leading-tight xl:text-6xl">
					Articles for Corporate Accountants
				</h1>

				<form id="search-form" class="flex items-center">
					<label for="search-input" class="sr-only">Search</label>
					<div class="relative w-full">
						<input
							type="text"
							id="query"
							name="query"
							class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5"
							placeholder="Search articles..."
							required
						/>
					</div>
					<button
						type="submit"
						class="p-2.5 ms-2 text-sm font-medium text-white bg-indigo-700 rounded-lg border border-indigo-700 hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300"
					>
						<svg
							class="w-4 h-4"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 20 20"
						>
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
							/>
						</svg>
						<span class="sr-only">Search</span>
					</button>
				</form>
			</div>
			<!-- Most Recent Article -->
			<div class="relative inline-block w-full sm:w-auto cursor-pointer rounded-2xl">
				<a href="article.html">
					<img src="/images/image1.png" alt="Article Image" class="w-full h-auto rounded-2xl" />

					<div
						class="absolute inset-0 flex flex-col items-center justify-center bg-black opacity-80 hover:opacity-75 transition duration-300 ease-in-out text-white text-center rounded-2xl"
					>
						<div>
							<h2 class="text-2xl font-semibold sm:text-3xl">
								The best laptops for Accountants in 2025
							</h2>
							<p class="text-xl mt-4">January 20, 2025</p>

							<!-- Tags with rounded border -->
							<div class="flex mt-4 justify-center">
                <span
					class="px-2 py-1 border text-white rounded-full text-xs mr-2"
				>Tech</span
				>
								<span
									class="px-2 py-1 border text-white rounded-full text-xs mr-2"
								>Hardware</span
								>
							</div>
						</div>
					</div>
				</a>
			</div>
		</div>

		<!-- Main Grid -->
		<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
			<!-- Article Card -->
			<div class="max-w-md mx-auto mt-10">
				<div class="bg-white rounded-lg overflow-hidden shadow-lg">
					<a href="article.html">
						<img
							src="/images/image2.png"
							alt="Article Image"
							class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
						/>
					</a>
					<div class="p-6">
						<h2 class="text-2xl font-semibold mb-2">
							<a href="article.html"> Guardian of the Finance Realm: Yahoo Finance</a>
						</h2>
						<p class="text-gray-600 text-sm mb-4">January 19, 2025</p>
						<div class="flex flex-wrap gap-2">
                <span
					class="px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
				><a href="">Code</a></span
				>
							<span
								class="px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"
							><a href="#">Software</a></span
							>
						</div>
					</div>
				</div>
			</div>

			<!-- Article Card -->
			<div class="max-w-md mx-auto mt-10">
				<div class="bg-white rounded-lg overflow-hidden shadow-lg">
					<a href="article.html">
						<img
							src="/images/image4.png"
							alt="Article Image"
							class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
						/>
					</a>
					<div class="p-6">
						<h2 class="text-2xl font-semibold mb-2">
							<a href="article.html"> Immerse in the World: Generative Ai </a>
						</h2>
						<p class="text-gray-600 text-sm mb-4">January 18, 2025</p>
						<div class="flex flex-wrap gap-2">
                <span
					class="px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
				><a href="">VR</a></span
				>
							<span
								class="px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"
							><a href="#">GenerativeAi</a></span
							>
						</div>
					</div>
				</div>
			</div>

			<!-- Article Card -->
			<div class="max-w-md mx-auto mt-10">
				<div class="bg-white rounded-lg overflow-hidden shadow-lg">
					<a href="article.html">
						<img
							src="/images/image2.png"
							alt="Article Image"
							class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
						/>
					</a>
					<div class="p-6">
						<h2 class="text-2xl font-semibold mb-2">
							<a href="article.html"> Elevate Your Mobile Experience with Accountant Applications </a>
						</h2>
						<p class="text-gray-600 text-sm mb-4">January 17, 2025</p>
						<div class="flex flex-wrap gap-2">
                <span
					class="px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
				><a href="">Calculators</a></span
				>
							<span
								class="px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"
							><a href="#">Software</a></span
							>
						</div>
					</div>
				</div>
			</div>

			<!-- Article Card -->
			<div class="max-w-md mx-auto mt-10">
				<div class="bg-white rounded-lg overflow-hidden shadow-lg">
					<a href="article.html">
						<img
							src="/images/image1.png"
							alt="Article Image"
							class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
						/>
					</a>
					<div class="p-6">
						<h2 class="text-2xl font-semibold mb-2">
							<a href="article.html"> Soaring to New Heights: The World of PowerBI</a>
						</h2>
						<p class="text-gray-600 text-sm mb-4">January 16, 2025</p>
						<div class="flex flex-wrap gap-2">
                <span
					class="px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
				><a href="">InterestRates</a></span
				>
							<span
								class="px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"
							><a href="#">TechCompanies</a></span
							>
						</div>
					</div>
				</div>
			</div>

			<!-- Article Card -->
			<div class="max-w-md mx-auto mt-10">
				<div class="bg-white rounded-lg overflow-hidden shadow-lg">
					<a href="article.html">
						<img
							src="/images/image2.png"
							alt="Article Image"
							class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
						/>
					</a>
					<div class="p-6">
						<h2 class="text-2xl font-semibold mb-2">
							<a href="article.html"> Capturing Life's Moments with Excellence</a>
						</h2>
						<p class="text-gray-600 text-sm mb-4">January 14, 2025</p>
						<div class="flex flex-wrap gap-2">
                <span
					class="px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
				><a href="">Calculators</a></span
				>
							<span
								class="px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"
							><a href="#">TaxPreparation</a></span
							>
						</div>
					</div>
				</div>
			</div>

			<!-- Article Card -->
			<div class="max-w-md mx-auto mt-10">
				<div class="bg-white rounded-lg overflow-hidden shadow-lg">
					<a href="article.html">
						<img
							src="/images/image7.png"
							alt="Article Image"
							class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
						/>
					</a>
					<div class="p-6">
						<h2 class="text-2xl font-semibold mb-2">
							<a href="article.html">
								Unleash Creativity With These Cutting-Edge Tools</a
							>
						</h2>
						<p class="text-gray-600 text-sm mb-4">January 13, 2025</p>
						<div class="flex flex-wrap gap-2">
                <span
					class="px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
				><a href="">Gadgets</a></span
				>
							<span
								class="px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"
							><a href="#">Calculators</a></span
							>
						</div>
					</div>
				</div>
			</div>
		</div>
		</section>

		<footer class="bg-indigo-900 text-white">
			<div class="container mx-auto mt-10 max-w-screen-xl px-8">
				<div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-4">
					<div class="mt-10">
						<h3 class="text-xl font-semibold mb-4">About</h3>
						<p class="text-white text-sm">
							Astro Accountant is a blog for tax & finance enthusiasts. We publish articles about the latest technology trends and
							advancements.
						</p>
					</div>
					<div class="mt-10">
						<h3 class="text-xl font-semibold mb-4">Categories</h3>
						<ul class="text-white text-sm">
							<li class="mb-2">
								<a href="#">TechCompanies</a>
							</li>
							<li class="mb-2">
								<a href="#">Programming</a>
							</li>
							<li class="mb-2">
								<a href="#">Hardware</a>
							</li>
							<li class="mb-2">
